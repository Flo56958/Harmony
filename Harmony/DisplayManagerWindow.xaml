<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harmony"
        xmlns:Drawing="clr-namespace:System.Drawing;assembly=System.Drawing" x:Class="Harmony.DisplayManagerWindow"
        mc:Ignorable="d"
        Title="Harmony - Display Manager" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="DisplayCanvas" HorizontalAlignment="Left" Height="370" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <Canvas.DataContext>
                <Rectangle/>
            </Canvas.DataContext>
        </Canvas>
        <Button x:Name="SaveButton" Content="Save Configuration" HorizontalAlignment="Left" Margin="10,391,0,0" VerticalAlignment="Top" Width="120" Click="OnClickSave" ClickMode="Release"/>
        <Button x:Name="UpdateButton" Content="Update Configuration" HorizontalAlignment="Left" Margin="148,391,0,0" VerticalAlignment="Top" Width="120" Click="OnClickUpdate" ClickMode="Release"/>
    </Grid>
</Window>
